{
  "name": "comic-book-portfolio",
  "version": "1.0.0",
  "description": "A comic book-styled personal portfolio website",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "dev": "npm run watch:css",
    "serve": "npx http-server . -o ./src/index.html"
  },
  "dependencies": {
    "daisyui": "^3.9.4",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
